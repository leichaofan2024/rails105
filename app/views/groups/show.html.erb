
<div class="group">
  <span>
    <% if current_user && current_user.is_member_of?(@group) %>
      <%= link_to("退出", quit_group_path(@group), method: :post, class: "btn btn-default") %>
      <label class= "label label-success"> 群组成员 </label>
    <% else %>
      <%= link_to("加入", join_group_path(@group), method: :post, class: "btn btn-default") %>
      <label class="lable label-warning">不是群组成员</label>
    <% end %>
  </span>
  <%= link_to("Write a Post",new_group_post_path(@group), class: "btn btn-primary pull-right")%>
  <% if current_user == @group.user %>
  <%= link_to("编辑", edit_group_path(@group), class: "btn btn-primary pull-right") %>
  <% end %>

</div>

<div class="text-center">
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>
</div>
<table class="table">
  <thead>
    <tr>
      <th>文章标题</th>
      <th>作者</th>
      <th>创建时间</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= link_to(post.title, group_post_path(post.group,post)) %></td>
      <td><%= post.user.email %></td>
      <td><%= post.created_at %></td>
      <td colspan="2">
         <%= link_to("Edit", edit_group_post_path(post.group,post), class: "btn btn-primary") %>
         <%= link_to("Destroy", group_post_path(post.group,post), method: :delete,data: {confirm: "Are you sure?"}, class: "btn btn-danger") %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
 <div class="text-center">
   <%= will_paginate @posts %>
 </div>
