<h1>我发表过的文章</h1>
<hr>
<table class="table">
  <thead>
    <tr>
      <td>文章标题</td>
      <td>文章作者</td>
      <td>发表时间</td>
      <td>所属群组</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.user.email %></td>
      <td><%= post.created_at %></td>
      <td><%= post.group_id %></td>
    </tr>
    <% end %>
  </tbody>
</table>
